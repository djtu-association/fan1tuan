<sitemesh>
	<!-- This tells SiteMesh that requests matching the path /* (i.e. all requests) 
		should be decorated with /decorator.html that we just created. -->
	<mapping path="/freemarker.ftl" decorator="/WEB-INF/ftls/sitemesh/decorator.ftl" />
	
	<!-- Exclude path from decoration. -->
  	<mapping path="/javadoc/*" exclue="true"/>
  	<mapping path="/brochures/*" exclue="true"/>
	
</sitemesh>